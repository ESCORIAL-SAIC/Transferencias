<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Transferencias.Views.Almacen.AlmacenNuevaTransferenciaView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
    xmlns:controls="clr-namespace:Transferencias.Controls"
    Shell.NavBarIsVisible="False">
    <Grid Padding="0,0" RowDefinitions="Auto,8*,*">
        <controls:TopBar
            Grid.Row="0"
            UseLogoutButton="True"
            ShowUserData="True" />
        <Grid
            Grid.Row="1"
            Padding="20,10"
            RowDefinitions="Auto,Auto,Auto,Auto,*"
            RowSpacing="20">
            <Border
                Grid.Row="0"
                Margin="5"
                Stroke="Transparent"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0">
                <cv:CameraView
                    x:Name="CameraView"
                    BarCodeDetectionEnabled="True"
                    BarcodeDetected="CameraView_BarcodeDetected"
                    CamerasLoaded="CameraView_CamerasLoaded"
                    HeightRequest="150"
                    WidthRequest="500" />
            </Border>
            <Label
                x:Name="BarcodeResult"
                Grid.Row="1"
                FontSize="20"
                Text="Escaneando cÃ³digo..." />
            <BoxView
                Grid.Row="2"
                Grid.RowSpan="3"
                Margin="-20,-10,-20,-20"
                BackgroundColor="{StaticResource Primary}"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Fill"
                ZIndex="-1" />
            <Label
                x:Name="NumeroSolicitudLabel"
                Grid.Row="2"
                FontAttributes="Bold"
                FontSize="Subtitle"
                Text="{Binding SolicitudTransferencia.NombreSolicitud}"
                TextColor="{StaticResource Gray100}" />
            <Label
                Grid.Row="3"
                FontAttributes="Bold"
                FontSize="Subtitle"
                Text="Items:"
                TextColor="{StaticResource Gray100}" />
            <ListView
                x:Name="ItemsListView"
                Grid.Row="4"
                Margin="0,20,0,0"
                ItemsSource="{Binding SolicitudTransferencias.ItemsSolicitudTransferencia}"
                SelectionMode="Single"
                SeparatorColor="Transparent"
                VerticalOptions="FillAndExpand"
                VerticalScrollBarVisibility="Always">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid
                                Margin="0,5"
                                Padding="0"
                                HeightRequest="42"
                                VerticalOptions="FillAndExpand">
                                <BoxView
                                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray100},
                                                                      Dark={StaticResource Gray600}}"
                                    CornerRadius="10"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    ZIndex="-1" />
                                <Grid Padding="5,0,0,0" ColumnSpacing="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Column="0"
                                        FontAttributes="Bold"
                                        Text="{Binding Producto.Codigo}"
                                        VerticalOptions="Center" />
                                    <Label
                                        Grid.Column="1"
                                        FontSize="Default"
                                        Text="{Binding Producto.Descripcion}"
                                        VerticalOptions="Center" />
                                    <Label
                                        Grid.Column="2"
                                        FontAttributes="Bold"
                                        FontSize="Subtitle"
                                        Text="{Binding Cantidad}"
                                        VerticalOptions="Center" />
                                    <CheckBox
                                        Grid.Column="3"
                                        IsChecked="{Binding Pickeado}"
                                        IsEnabled="False"
                                        VerticalOptions="Center"
                                        Color="White" />
                                </Grid>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Button
            x:Name="ConfirmarButton"
            Grid.Row="2"
            Margin="0,0,0,10"
            Pressed="ConfirmarButton_OnPressed"
            Text="Confirmar"
            VerticalOptions="End"
            WidthRequest="200" />
    </Grid>
</ContentPage>